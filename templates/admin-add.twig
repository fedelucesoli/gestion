{% extends "layout.twig" %}
{% block body %}
<section>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Agregar nuevo</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <form class="form-horizontal" action="{{ path_for('admin.addItem')}}" method="post">
        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput">Titulo</label>
          <div class="col-md-5">
          <input id="textinput" name="textinput" type="text" placeholder="titulo" class="form-control input-md" required="">

          </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="descripcion">Descripcion</label>
          <div class="col-md-4">
            <textarea class="form-control" id="descripcion" name="descripcion"></textarea>
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="categoria">Categoria</label>
          <div class="col-md-4">
            <select id="categoria" name="categoria" class="form-control">
              <option value="1">Option one</option>
              <option value="2">Option two</option>
            </select>
          </div>
        </div>

        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="singlebutton"></label>
          <div class="col-md-4">
            <button id="singlebutton" name="singlebutton" class="btn btn-primary">Enviar</button>
          </div>
        </div>

      </form>
    </div>
  </div>

</div>
</section>
{% endblock body %}
